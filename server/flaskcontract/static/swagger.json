{
  "openapi": "3.0.0",
  "info": {
    "description": "Contractors collaboration tools",
    "version": "1.0.0",
    "title": "Contractors collaboration tool specification",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "tags": [
    {
      "name": "Contractors API",
      "description": "Contractors negotiation tool"
    }
  ],
  "servers": [
        {
        "url": "/"
        }
    ],
  "components": {
        "schemas": {
            "Authentication": {
                "type": "object",
                "properties": {
                    "email": {
                    "type": "string"
                    },
                    "password": {
                    "type": "string"
                    }
                }
            }
        }
    },
  "paths": {
    "/contract/api/login": {
      "post": {
        "tags": [
          "Login"
        ],
        "summary": "Login",
        "requestBody": {
          "description": "Provide login information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Authentication"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Authentication"
            }
          },
          "404": {
            "description": "NOT FOUND",
            "schema": {
              "$ref": "#/components/schemas/Authentication"
            }
          }
        }
      }
    },
    "/contract/api/register": {
      "post": {
        "tags": [
          "Register"
        ],
        "summary": "Register new user",
        "requestBody": {
          "description": "Provide new user information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Authentication"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/components/schemas/Authentication"
            }
          },
          "404": {
            "description": "NOT FOUND",
            "schema": {
              "$ref": "#/components/schemas/Authentication"
            }
          }
        }
      }
    },
    "/contract/api/get_user": {
      "get": {
        "tags": [
          "Get current user"
        ],
        "summary": "Get the current user",
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "NOT FOUND"
          }
        }
      }
    }
  }
  }